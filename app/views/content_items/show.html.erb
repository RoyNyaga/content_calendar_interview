<h1><%= @content_item.title %></h1>

<div><%= link_to 'Edit', edit_content_item_path(@content_item) %></div>
<div><%= link_to 'Delete', content_item_path(@content_item), method: :delete, 'data-confirm': 'Are you sure?' %></div>

<hr>

<%= @content_item.body %>

<hr>

<% unless @social_networks.blank? %>
  <table>
    <tr>
      <th>Platform</th>
      <th>publish date</th>
      <th>Action</th>
    </tr>
    <% @social_networks.each do |social_network| %>
    <tr>
      <th><%= social_network.description %></th>
      <th><%= social_network.publishing_target.publish_date.nil? ? "not specified" :  social_network.publishing_target.publish_date %></th>
      <th>
        <%= link_to "Edit publish date", edit_publishing_target_path(social_network.publishing_target) %>
      </th>
    </tr>
    <% end %>
  </table>
  
<% end %>
